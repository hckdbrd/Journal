@using Journal.Models
@model IEnumerable<Subject>

@{
    ViewData["Title"] = "Предметы";
}

<h1>Предметы</h1>

<p>
    <a asp-action="Create">Добавить предмет</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PracticeHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LaboratoryHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TheoryHours)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PracticeHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LaboratoryHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TheoryHours)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
