@using Journal.Models
@model Subject

@{
    ViewData["Title"] = "Предметы";
}

<h1>Добавить предмет</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PracticeHours" class="control-label"></label>
                <input asp-for="PracticeHours" class="form-control" />
                <span asp-validation-for="PracticeHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LaboratoryHours" class="control-label"></label>
                <input asp-for="LaboratoryHours" class="form-control" />
                <span asp-validation-for="LaboratoryHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TheoryHours" class="control-label"></label>
                <input asp-for="TheoryHours" class="form-control" />
                <span asp-validation-for="TheoryHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться назад</a>
</div>

